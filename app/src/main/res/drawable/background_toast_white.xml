<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/grey_10" /> <!-- Shadow color -->
            <corners android:radius="15dp" />
        </shape>
    </item>
    <!-- Shape with stroke -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Shape color -->
            <stroke
                android:width="2dp"
                android:color="@color/grey_10" /> <!-- Stroke color -->
            <corners android:radius="15dp" />
        </shape>
    </item>
</layer-list>

