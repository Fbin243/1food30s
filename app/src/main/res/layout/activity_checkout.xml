<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="16dp">

        <include
            android:id="@+id/ivBack"
            layout="@layout/item_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/font_family"
            android:textFontWeight="800"
            android:text="@string/checkout"
            android:textSize="@dimen/font_header"
            app:layout_constraintStart_toEndOf="@+id/ivBack"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.zebrand.app1food30s.ui.checkout.LockableNestedScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bottomContainer"
        app:layout_constraintTop_toBottomOf="@+id/clHeader">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tvShippingInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_shipping_info"
                android:fontFamily="@font/font_family"
                android:textFontWeight="700"
                android:textSize="@dimen/font_size18"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:paddingBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/noteContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/tvShippingInfo"
                app:boxStrokeColor="@color/primary"

                app:errorIconDrawable="@null"

                app:boxCornerRadiusTopStart="@dimen/radius8"
                app:boxCornerRadiusTopEnd="@dimen/radius8"
                app:boxCornerRadiusBottomStart="@dimen/radius8"
                app:boxCornerRadiusBottomEnd="@dimen/radius8"
                app:cursorColor="@color/primary"
                app:hintTextColor="@color/primary"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tvNote"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/txt_note_my_order"
                    android:paddingTop="12dp"
                    android:paddingBottom="12dp"/>

            </com.google.android.material.textfield.TextInputLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/searchTextBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/noteContainer">
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/addressContainer"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:boxStrokeColor="@color/primary"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toStartOf="@+id/searchButton"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginEnd="5dp"
                    app:errorEnabled="false"
                    app:errorIconDrawable="@null"

                    app:boxCornerRadiusTopStart="@dimen/radius8"
                    app:boxCornerRadiusTopEnd="@dimen/radius8"
                    app:boxCornerRadiusBottomStart="@dimen/radius8"
                    app:boxCornerRadiusBottomEnd="@dimen/radius8"
                    app:cursorColor="@color/primary"
                    app:hintTextColor="@color/primary"
                    >

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/tvAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/txt_address"
                        android:paddingTop="12dp"
                        android:paddingBottom="12dp" />
                </com.google.android.material.textfield.TextInputLayout>

                <ImageView
                    android:id="@+id/searchButton"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:padding="11dp"
                    android:src="@drawable/ic_search_bold"
                    android:clickable="true"
                    android:focusable="true"
                    android:contentDescription="Icon Description"
                    android:background="@drawable/background_search_btn"
                    app:tint="@color/white"
                    android:layout_marginTop="5dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_gravity="center"/>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/containerShipInfo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@id/searchTextBtn"
                android:layout_marginTop="4dp">
                <TextView
                    android:id="@+id/tvShipInfo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/txt_map"
                    android:fontFamily="@font/font_family"
                    android:textSize="@dimen/font_size16"
                    android:textColor="@color/black"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.fragment.app.FragmentContainerView
                android:id="@+id/map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintTop_toBottomOf="@id/containerShipInfo"
                app:layout_constraintBottom_toTopOf="@id/tvCartSummary"/>

            <TextView
                android:id="@+id/tvCartSummary"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_cart_summary"
                android:fontFamily="@font/font_family"
                android:textFontWeight="700"
                android:textSize="@dimen/font_size18"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/map"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:paddingBottom="4dp"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/checkoutItemsRecyclerView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/tvCartSummary"
                app:layout_constraintStart_toStartOf="parent" />

            <TextView
                android:id="@+id/tvPaymentMethod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_payment_method"
                android:fontFamily="@font/font_family"
                android:textFontWeight="700"
                android:textSize="@dimen/font_size18"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@+id/checkoutItemsRecyclerView"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/spacing20"
                android:paddingBottom="4dp"/>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/layoutPaymentMethod"
                style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:boxCornerRadiusBottomEnd="@dimen/spacing12"
                app:boxCornerRadiusBottomStart="@dimen/spacing12"
                app:boxCornerRadiusTopEnd="@dimen/spacing12"
                app:boxCornerRadiusTopStart="@dimen/spacing12"
                android:visibility="visible"
                android:layout_marginTop="@dimen/spacing4"
                app:layout_constraintTop_toBottomOf="@+id/tvPaymentMethod"
                app:layout_constraintStart_toStartOf="parent"
                >

                <AutoCompleteTextView
                    android:id="@+id/spinnerPayment"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/spacing48"
                    android:inputType="none"
                    android:paddingHorizontal="@dimen/spacing12"
                    android:text="Banking"
                    tools:ignore="LabelFor" />

            </com.google.android.material.textfield.TextInputLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.zebrand.app1food30s.ui.checkout.LockableNestedScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/bottomContainer"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:padding="16dp"
        android:background="@drawable/radius_top">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clPaymentInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:background="@drawable/rounded_background"
            android:padding="8dp"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btnPlaceOrder">

            <TextView
                android:id="@+id/textView_total"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/txt_total"
                android:textSize="@dimen/font_size20"
                android:fontFamily="@font/font_family"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_amount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/font_family"
                android:textFontWeight="700"
                android:text="$0.00"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:textColor="@color/primary"
                android:textSize="@dimen/font_size20"
                android:textStyle="bold"
                app:layout_constraintBaseline_toBaselineOf="@+id/textView_total"
                app:layout_constraintEnd_toEndOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!--        <com.paypal.checkout.paymentbutton.PaymentButtonContainer-->
        <!--            app:layout_constraintTop_toBottomOf="bottomContainer"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            android:id="@+id/payment_button_container"-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="60dp"-->
        <!--            app:paypal_button_color="@color/primary"-->
        <!--            app:paypal_button_label="pay"-->
        <!--            app:paypal_button_shape="rectangle"-->
        <!--            app:paypal_button_size="large"-->
        <!--            app:paypal_button_enabled="true" />-->

        <Button
            android:id="@+id/btnPlaceOrder"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing60"
            android:text="@string/place_order"
            android:textSize="@dimen/font_header"
            android:textStyle="bold"
            android:backgroundTint="@color/primary"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>