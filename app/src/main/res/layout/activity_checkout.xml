<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingBottom="16dp">

        <include
            android:id="@+id/ivBack"
            layout="@layout/item_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvCheckout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/rubik_extrabold"
            android:text="@string/checkout"
            android:textSize="@dimen/font_header"
            app:layout_constraintStart_toEndOf="@+id/ivBack"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/tvShippingInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shipping Info"
        android:fontFamily="@font/rubik_bold"
        android:textSize="@dimen/font_size18"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/clHeader"
        app:layout_constraintStart_toStartOf="parent"
        android:paddingBottom="4dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/addressContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/tvShippingInfo"
        app:boxStrokeColor="@color/primary"

        app:errorEnabled="true"
        app:errorIconDrawable="@null"

        app:boxCornerRadiusTopStart="@dimen/radius8"
        app:boxCornerRadiusTopEnd="@dimen/radius8"
        app:boxCornerRadiusBottomStart="@dimen/radius8"
        app:boxCornerRadiusBottomEnd="@dimen/radius8"
        app:cursorColor="@color/primary"
        app:hintTextColor="@color/primary"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Address"
            android:paddingTop="12dp"
            android:paddingBottom="12dp" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/noteContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/addressContainer"
        app:boxStrokeColor="@color/primary"

        app:errorIconDrawable="@null"

        app:boxCornerRadiusTopStart="@dimen/radius8"
        app:boxCornerRadiusTopEnd="@dimen/radius8"
        app:boxCornerRadiusBottomStart="@dimen/radius8"
        app:boxCornerRadiusBottomEnd="@dimen/radius8"
        app:cursorColor="@color/primary"
        app:hintTextColor="@color/primary"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tvNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Note"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/tvCartSummary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cart Summary"
        android:fontFamily="@font/rubik_bold"
        android:textSize="@dimen/font_size18"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@+id/noteContainer"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        android:paddingBottom="4dp"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/checkoutItemsRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvCartSummary"
        app:layout_constraintBottom_toTopOf="@id/clPaymentInfo"
        android:layout_marginBottom="16dp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clPaymentInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:background="@drawable/rounded_background"
        android:padding="8dp"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnPlaceOrder">

        <TextView
            android:id="@+id/textView_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="@dimen/font_size20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/rubik_bold"
            android:text="$0.00"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/primary"
            android:textSize="@dimen/font_size20"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView_total"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

