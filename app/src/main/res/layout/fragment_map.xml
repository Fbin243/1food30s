<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/searchTextBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/noteContainer"
        android:layout_marginBottom="8dp">
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/addressContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:boxStrokeColor="@color/primary"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/searchButton"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="5dp"
            app:errorEnabled="false"
            app:errorIconDrawable="@null"

            app:boxCornerRadiusTopStart="@dimen/radius8"
            app:boxCornerRadiusTopEnd="@dimen/radius8"
            app:boxCornerRadiusBottomStart="@dimen/radius8"
            app:boxCornerRadiusBottomEnd="@dimen/radius8"
            app:cursorColor="@color/primary"
            app:hintTextColor="@color/primary"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/txt_address"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:maxLines="2"
                android:ellipsize="end"/>
        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/searchButton"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:padding="11dp"
            android:src="@drawable/ic_search_bold"
            android:clickable="true"
            android:focusable="true"
            android:contentDescription="Icon Description"
            android:background="@drawable/background_search_btn"
            app:tint="@color/white"
            android:layout_marginTop="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_gravity="center"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        app:layout_constraintTop_toBottomOf="@id/containerShipInfo"
        app:layout_constraintBottom_toTopOf="@id/tvCartSummary"
        android:clickable="true"
        android:focusable="true"/>
</LinearLayout>
