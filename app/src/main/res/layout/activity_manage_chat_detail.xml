<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/linear_app_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <include
            android:id="@+id/backIcon"
            layout="@layout/item_back"
            android:layout_width="30dp"
            android:layout_height="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="8dp"
            android:layout_marginLeft="@dimen/spacing8">

            <androidx.cardview.widget.CardView
                android:id="@+id/avaContainer"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardCornerRadius="1000dp"
                app:cardElevation="0dp">
                <ImageView
                    android:id="@+id/imageBuyer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/default_avatar" />
            </androidx.cardview.widget.CardView>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvBuyerName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1Food30s"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                    android:textColor="@color/black"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/linear_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginHorizontal="@dimen/spacing8"
        android:layout_gravity="bottom"
        android:background="#28000000" />

    <!-- RecyclerView for displaying messages -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewChat"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/spacing8"
        tools:listitem="@layout/item_message" />

    <!-- Input field and Send button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/spacing16">

        <!--        <EditText-->
        <!--            android:id="@+id/editTextMessage"-->
        <!--            android:layout_width="0dp"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_weight="1"-->
        <!--            android:hint="Type a message"-->
        <!--            android:inputType="text" />-->

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_name"
            android:layout_width="290dp"
            android:layout_height="@dimen/spacing44"
            app:boxCornerRadiusBottomEnd="@dimen/radius24"
            app:boxCornerRadiusBottomStart="@dimen/radius24"
            app:boxCornerRadiusTopEnd="@dimen/radius24"
            app:boxCornerRadiusTopStart="@dimen/radius24"
            app:boxStrokeColor="@color/primary"
            app:cursorColor="@color/primary"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false"
            tools:layout_editor_absoluteX="16dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/editTextMessage"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:paddingTop="@dimen/spacing8"
                android:paddingBottom="@dimen/spacing10"
                android:hint="Type a message" />

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/buttonSend"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_marginLeft="@dimen/spacing10"
            android:background="@drawable/send_svgrepo_com__2_" />


    </LinearLayout>

</LinearLayout>
