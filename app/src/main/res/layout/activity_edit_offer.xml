<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.edit_offer.EditOffer">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/spacing16"
        android:paddingBottom="@dimen/spacing24"
        >

        <LinearLayout
            android:id="@+id/linear_app_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing20"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/spacing16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <include
                android:id="@+id/backIcon"
                layout="@layout/item_back"
                android:layout_width="30dp"
                android:layout_height="30dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing18"
                android:fontFamily="@font/rubik_bold"
                android:text="@string/txt_edi_offer"
                android:textSize="@dimen/font_header" />
        </LinearLayout>


        <View
            android:id="@+id/linear_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:background="#28000000"
            app:layout_constraintTop_toBottomOf="@id/linear_app_bar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/text_offer_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/product_name"
            android:layout_marginTop="@dimen/spacing24"
            app:layout_constraintTop_toBottomOf="@+id/linear_line"
            tools:layout_editor_absoluteX="14dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/edit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomEnd="@dimen/radius8"
            app:boxCornerRadiusBottomStart="@dimen/radius8"
            app:boxCornerRadiusTopEnd="@dimen/radius8"
            app:boxCornerRadiusTopStart="@dimen/radius8"
            app:boxStrokeColor="@color/primary"
            app:cursorColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:layout_constraintTop_toBottomOf="@+id/text_offer_name"
            tools:layout_editor_absoluteX="16dp">


            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_name"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing60"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>


        <TextView
            android:id="@+id/text_discount_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_discount_rate"
            android:layout_marginTop="@dimen/spacing20"
            app:layout_constraintTop_toBottomOf="@+id/edit_name"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteX="3dp" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/discountRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/text_discount_rate"
            app:layout_constraintStart_toStartOf="parent"
            app:boxStrokeColor="@color/primary"
            app:boxCornerRadiusTopStart="@dimen/radius8"
            app:boxCornerRadiusTopEnd="@dimen/radius8"
            app:boxCornerRadiusBottomStart="@dimen/radius8"
            app:boxCornerRadiusBottomEnd="@dimen/radius8"
            app:cursorColor="@color/primary"
            app:hintTextColor="@color/primary"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/input_discount_rate"
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing60"
                android:inputType="numberDecimal"
                android:maxLines="1" />

        </com.google.android.material.textfield.TextInputLayout>

        <ImageView
            android:id="@+id/image_offer"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:paddingHorizontal="@dimen/spacing20"
            android:paddingVertical="@dimen/spacing14"
            android:src="@drawable/upload"
            android:background="@drawable/dashed_border"
            app:layout_constraintTop_toBottomOf="@+id/discountRate"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/spacing20"
            android:clickable="true"
            android:focusable="true"/>


        <Button
            android:id="@+id/remove_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing60"
            android:backgroundTint="@color/deep_orange"
            android:text="@string/txt_remove_offer"
            android:textSize="@dimen/font_size16"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/spacing50"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/image_offer"
            tools:layout_editor_absoluteY="643dp" />

        <Button
            android:id="@+id/create_btn"
            android:layout_width="match_parent"
            android:layout_height="@dimen/spacing60"
            android:backgroundTint="@color/primary"
            android:text="@string/txt_save_offer"
            android:textSize="@dimen/font_size16"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/spacing10"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/remove_btn"
            tools:layout_editor_absoluteY="643dp" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>