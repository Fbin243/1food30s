<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.list_product.ListProductFragment">

    <LinearLayout
        android:id="@+id/textViewContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <include
            android:id="@+id/backBtn"
            layout="@layout/item_back"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone" />

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/spacing0"
            app:cardCornerRadius="@dimen/spacing10"
            app:cardElevation="@dimen/spacing0">

            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/shimmerLayout"
                android:layout_width="150dp"
                android:layout_height="24dp"
                android:background="@color/shimmer_color" />

            <TextView
                android:id="@+id/textTitleView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:fontFamily="@font/rubik_extrabold"
                android:text="@string/txt_latest_dishes"
                android:textSize="@dimen/font_header"
                android:visibility="gone"
                app:layout_constraintStart_toEndOf="@+id/backBtn"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/rubik_extrabold"
                android:text="Appetizers"
                android:textColor="@color/primary"
                android:textSize="@dimen/font_default"
                android:visibility="gone" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>


    <ImageButton
        android:id="@+id/gridBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:backgroundTint="@color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_grid"
        app:layout_constraintBottom_toBottomOf="@+id/textViewContainer"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textViewContainer" />

    <ImageButton
        android:id="@+id/linearBtn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="40dp"
        android:backgroundTint="@color/transparent"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_active_linear"
        app:layout_constraintBottom_toBottomOf="@+id/textViewContainer"
        app:layout_constraintEnd_toEndOf="@+id/gridBtn"
        app:layout_constraintTop_toTopOf="@+id/textViewContainer" />

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="-8dp"
        android:id="@+id/swipeRefreshLayout"
        app:layout_constraintTop_toBottomOf="@+id/textViewContainer">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/productRcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingBottom="@dimen/spacing80"/>



    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <com.facebook.shimmer.ShimmerFrameLayout
        android:id="@+id/productShimmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewContainer">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <include layout="@layout/product_card_view_linear_shimmer" />

            <include layout="@layout/product_card_view_linear_shimmer" />

            <include layout="@layout/product_card_view_linear_shimmer" />

            <include layout="@layout/product_card_view_linear_shimmer" />

            <include layout="@layout/product_card_view_linear_shimmer" />

            <include layout="@layout/product_card_view_linear_shimmer" />

            <include layout="@layout/product_card_view_linear_shimmer" />

            <include layout="@layout/product_card_view_linear_shimmer" />

        </LinearLayout>

    </com.facebook.shimmer.ShimmerFrameLayout>

    <LinearLayout
        android:id="@+id/noItemLayout"
        android:layout_width="match_parent"
        android:layout_height="1000dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:gravity="center_horizontal"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@+id/linearBtn"
        tools:ignore="UseCompoundDrawables"
        android:background="@color/white">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="100dp"
            android:src="@drawable/no_items" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/txt_no_item_available"
            android:textSize="@dimen/font_size16"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
